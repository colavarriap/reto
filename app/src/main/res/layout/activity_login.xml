<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blue_grey_300"
        tools:context=".ui.activities.LoginActivity">

        <EditText
            android:id="@+id/edNameDevice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/size_40"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:autofillHints="@string/hint_name_device"
            android:fontFamily="@font/neo_sans_std_regular"
            android:hint="@string/hint_name_device"
            android:inputType="text"
            android:textSize="@dimen/text_size_13"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <androidx.cardview.widget.CardView
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/size_40"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/size_24"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="@color/brown_300"
            card_view:cardCornerRadius="@dimen/size_4"
            card_view:cardElevation="@dimen/size_2"
            card_view:cardUseCompatPadding="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="@dimen/size_16"
                android:fontFamily="@font/neo_sans_std_regular"
                android:text="@string/login"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_13" />

        </androidx.cardview.widget.CardView>


    </FrameLayout>


</layout>